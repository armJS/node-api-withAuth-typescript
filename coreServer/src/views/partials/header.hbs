<header class="page-header">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href='/notes/list'><i data-feather="home"></i></a>
        <a class="navbar-brand" href='/notes/list'></a>
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <span class="navbar-text col">{{ title }}</span>
            {{#if user}}
                <a class="nav-item nav-link btn btn-outline-primary col-auto" href='/notes/logout'>Logout</a>
                <a class="nav-item nav-link btn btn-outline-success col-auto" href='/notes/add'>Add Note</a>
                <div class="profile">
                    <i data-feather="user"></i>
                    <span>{{user.username}}</span>
                </div>
            {{else}}
                <a class="nav-item nav-link btn btn-outline-primary col-auto" href='/notes/register'>Sign Up</a>
                <a class="nav-item nav-link btn btn-outline-success col-auto" href='/notes/login'>Sign In</a>
            {{/if}}
        </div>
    </nav>
</header>